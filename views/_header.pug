//- header.pug

header.header
  nav.nav.nav--tours
    a.nav__el(href='/') All tours
      
    .search-bar
      form#search-form(action="/tours/search" method="GET")
        input(type="text", id="search-input", name="query", placeholder="Search Cities or tour locations")
        button(type="submit")
          i.fas.fa-search


  nav.nav.nav--user
    if locals.user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${locals.user.photo}` alt=`Photo of ${locals.user.name}`)
        span= locals.user.name.split(' ')[0]
    else
      a.nav__el(href='/login') Log in
      a.nav__el.nav__el--cta(href='#') Sign up

  
   

